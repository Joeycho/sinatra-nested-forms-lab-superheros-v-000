  <label for="hero_power_3">Hero's Power</label>
  <input id="hero_power_3" type="text" name="team[heros][][power]" /><br>
  <label for="hero_biography_3">Hero's Biography</label>
  <input id="hero_biography_3" type="text" name="team[heros][][biography]" /><br>

  <input type="submit" value="Submit">
